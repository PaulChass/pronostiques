{% block body %}
    <div class="mx-auto jumbotron">
    <div class="container">
    <div class="row">
        {% for match in matchs  %}
        <div class="col-2 mx-auto container" style="margin:10px 0px 0px 0px;">
            <button class="card fa mx-auto" style="width:100%;height:100%;"><a href={{ path('face-a-face', {gameId: match.GameId}) }}#comparaison>   
                <li class="list-group-item" style="list-style:none">
                    <img src="{{match.HomeLogoUrl}}" class="card-img p-2" ></li>
                <li class="list-group-item" style="list-style:none">
                    <img src="{{match.AwayLogoUrl}}" class="card-img p-2"></li>
                <li class="list-group-item" style="list-style:none"><span class="mx_auto card-text" style="padding:0 10%;text-align:center;">
                    {{match.Time|date('H')}}h{{match.Time|date('i')}}</span></li>
            </a>
            </button>
        </div>
        {% endfor %}
    </div>
    </div>
</div>
{% endblock %}
